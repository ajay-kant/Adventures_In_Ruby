<div class="order_form">
	<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<%= form_tag do %>
	<fieldset>
		<legend>Admin Log In to access content</legend> 
		<div>
			<br>
			<%= label_tag :name, 'Name:' %>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div><br>
			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<br>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
	<% end %>
</div>